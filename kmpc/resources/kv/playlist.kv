#:kivy 1.10.0
#:import OutlineLabel kmpc.widgets.OutlineLabel
#:import PlaylistRow kmpc.playlistpanel.PlaylistRow
#:import PlaylistRecycleBoxLayout kmpc.playlistpanel.PlaylistRecycleBoxLayout
#:import PlaylistTabbedPanelItem kmpc.playlistpanel.PlaylistTabbedPanelItem
#:import listbackdrop kmpc.widgets.listbackdrop

<PlaylistRow>:
    canvas.before:
        Color:
            rgba: app.get_color('listitemselected') if self.selected else (app.get_color('listitemcurrent') if self.iscurrent else app.get_color('listitem'))
        Rectangle:
            source: listbackdrop
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,0,0.7) if self.iscurrent else (1,1,1,0.3)
        Rectangle:
            size: (self.width,sp(3)) if self.iscurrent else (self.width,sp(1))
            pos: self.pos
        Rectangle:
            size: (self.width,sp(3)) if self.iscurrent else (self.width,sp(1))
            pos: (self.x,self.top)
    plpos: ''
    rownum: ''
    artist: ''
    title: ''
    iscurrent: False
    OutlineLabel:
        size_hint_x: None
        text: root.rownum
    OutlineLabel:
        size_hint_x: 1
        halign: 'left'
        valign: 'center'
        text_size: self.size
        text: root.artist+' - '+root.title

<PlaylistTabbedPanelItem>:
    text: 'Playlist'
    rv: rv
    rbl: rbl
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            OutlineButton:
                text: 'Clear'
                on_press: root.playlist_clear_pressed()
            OutlineButton:
                text: 'Delete'
                on_press: root.playlist_delete_pressed()
            OutlineButton:
                text: 'Move'
                on_press: root.playlist_move_pressed()
            OutlineButton:
                text: 'Shuffle'
                on_press: root.playlist_shuffle_pressed()
            OutlineButton:
                text: 'Swap'
                on_press: root.playlist_swap_pressed()
            OutlineButton:
                text: 'Save'
                on_press: root.playlist_save_pressed()
        RecycleView:
            id: rv
            scroll_type: ['bars','content']
            bar_width: sp(40)
            viewclass: 'PlaylistRow'
            PlaylistRecycleBoxLayout:
                id: rbl
                default_size: None, sp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: sp(2)
                multiselect: True
                touch_multiselect: True

